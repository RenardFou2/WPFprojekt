<Window x:Class="WPFprojekt.SelectFilmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFprojekt"
        mc:Ignorable="d"
        Title="Select Film" Height="400" Width="400">
    <Grid Margin="10">
        <TreeView x:Name="filmTreeView" SelectedItemChanged="FilmTreeView_SelectedItemChanged"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,0,0">
            <Button Content="OK" Width="70" Height="30" Click="OK_Click" Margin="0,5,15,0"/>
            <Button Content="Cancel" Width="70" Height="30" Click="Cancel_Click" Margin="0,5,15,0"/>
        </StackPanel>
    </Grid>
</Window>
